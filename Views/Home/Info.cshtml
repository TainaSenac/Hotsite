@model List<Contato>

    <h2>Listagem do fale conosco</h2>


    <table border="2">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Necessidade</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contato item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Necessidade</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>@item.Data</td>
                    <td>
                    <a href="/Contato/Editar?Id=@item.Id">Editar</a>
                    <a href="/Contato/Remover?Id=@item.Id">Excluir</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>